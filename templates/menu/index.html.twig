
{% extends 'base.html.twig' %}

{% block title %}Hello ParentController!{% endblock %}
{% block body %}


    <a class='btn btn-success mb-2' href="{{ path('app_menu_new') }}">Ajouter</a>



    <table class='table table-bordered'>
        {% for row in menus %}
            <tr>
                <td>{{ row.name }}</td>
                <td>{{ row.price }}</td>
                <td class='d-flex justify-content-around'>
                    <a href="{{ path('app_menu_show', {'id':row.id}) }}" class='btn btn-warning fa-solid fa-magnifying-glass' title='Afficher'></a>
                    <a href="{{ path('app_menu_edit', {'id':row.id}) }}" class='btn btn-primary fa fa-edit' title='Modification'></a>
                    <a href="{{ path('app_menu_delete', {'id':row.id}) }}" class='btn btn-danger fa fa-trash' title='Supprimer'></a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}